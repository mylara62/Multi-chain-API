<div class="col-md-8 col-md-offset-2">
  <div class="content-api"><br>
	  <h3>Balance Check</h3>
		<div class="balance_form">
			<div class="form-group">
				<label for="wallet_address">Wallet Address</label>
				<input type="text" class="form-control" id="balance_wallet_address" name="wallet_address" required>
			</div>
			<div class="form-group">
				<label for="coin_address">Coin Address</label>
				<input type="text" class="form-control" id="balance_coin_address" name="coin_address" required>  
			</div>
			<div class="form-group">
				<button id="balance_check_btn">Total Balance</button>
			</div>
		</div><br><br>
		<div id="balance_check"></div>
  </div>
</div>

<script type="text/javascript">
$("body").on("click","#balance_check_btn",function(){
	address = $("#balance_wallet_address").val()
	$.ajax({
		url: '/coins/balance_check',
		method: 'GET',
		data: {wallet_address: address}
	});
});
</script>

<style type="text/css">
	.form-control{
		width: 50% !important;
	}
</style>